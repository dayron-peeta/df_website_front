        <template id="felti_nav_data" name="Felti Nav">
            <t t-call="df_website_front.loader_event"/>
            <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top menu-navbar navbar-plataforma-virtual">
                <a class="navbar-brand" t-att-href="'/evento/%s' % (event.id)">
                    <img src="/df_website_front/static/src/img/felti-generico.svg"
                         class="d-inline-block img-fluid" alt="" loading="lazy" style="height: 25px;"/>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" id="navbar-button"
                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"/>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mx-auto">

                        <li class="nav-item menu-link dropdown">

                            <a class="nav-link felti-nav-link dropdown-toggle text-uppercase myriadpro-regular" href="#"
                               id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true"
                               aria-expanded="false">
                                About
                            </a>
                            <div class="dropdown-menu m-0 border-0 rounded-0"
                                 aria-labelledby="navbarDropdown">
                                <a class="dropdown-item text-uppercase text-dark myriadpro-regular my-dropdown-item-nav"
                                   t-att-href="'/evento/%s/about_us' % (event.id)">About us
                                </a>
                                <a class="dropdown-item text-uppercase text-dark myriadpro-regular my-dropdown-item-nav"
                                   t-att-href="'/evento/%s/committee_event' % (event.id)">Organizing committee
                                </a>
                                <t t-if="request.env.user.login != 'public'">
                                    <a class="dropdown-item text-uppercase text-dark myriadpro-regular my-dropdown-item-nav"
                                       t-att-href="'/evento/%s/exhibitor' % (event.id)">Exhibitors
                                    </a>
                                </t>
                                <a class="dropdown-item text-uppercase text-dark myriadpro-regular my-dropdown-item-nav"
                                   t-att-href="'/evento/%s/participant_event' % (event.id)">Participants
                                </a>
                                <t t-if="data_count_nav['count_speakers'] &gt; 0">
                                    <a class="dropdown-item text-uppercase text-dark myriadpro-regular my-dropdown-item-nav scrollto-link"
                                       t-att-href="'/evento/%s#ponentes-section' % (event.id)" id="ponentes">Speakers
                                    </a>
                                </t>
                            </div>
                        </li>
                        <t t-if="data_count_nav['count_plans'] &gt; 0 and request.env.user.login == 'public'">
                            <li class="nav-item menu-link">
                                <a class="nav-link felti-nav-link text-uppercase myriadpro-regular scrollto-link"
                                   t-att-href="'/evento/%s#planes-section' % (event.id)"
                                   id="planes">Categories
                                </a>
                            </li>
                        </t>
                        <t t-if="data_count_nav['thematic_rooms'] and len(data_count_nav['thematic_rooms']) &gt; 0">
                            <li class="nav-item menu-link dropdown">
                                <a class="nav-link felti-nav-link dropdown-toggle text-uppercase myriadpro-regular" href="#"
                                   id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true"
                                   aria-expanded="false">
                                    Thematic rooms
                                </a>
                                <div class="dropdown-menu m-0 border-0 rounded-0"
                                     aria-labelledby="navbarDropdown">
                                    <t t-if="len(data_count_nav['thematic_rooms']['lobby']) &gt; 0">
                                        <a class="dropdown-item text-uppercase text-dark myriadpro-regular my-dropdown-item-nav"
                                           t-att-href="'/evento/%s/%s/event_area' % (event.id,data_count_nav['thematic_rooms']['lobby'].id)">
                                            <t t-esc="data_count_nav['thematic_rooms']['lobby'].name"/>
                                        </a>
                                    </t>
                                    <t t-if="len(data_count_nav['thematic_rooms']['forum']) &gt; 0">
                                        <a class="dropdown-item text-uppercase text-dark myriadpro-regular my-dropdown-item-nav"
                                           t-att-href="'/evento/%s/%s/event_area' % (event.id,data_count_nav['thematic_rooms']['forum'].id)">
                                            <t t-esc="data_count_nav['thematic_rooms']['forum'].name"/>
                                        </a>
                                    </t>
                                    <t t-if="len(data_count_nav['thematic_rooms']['information']) &gt; 0">
                                        <a class="dropdown-item text-uppercase text-dark myriadpro-regular my-dropdown-item-nav"
                                           t-att-href="'/evento/%s/%s/event_area' % (event.id,data_count_nav['thematic_rooms']['information'].id)">
                                            <t t-esc="data_count_nav['thematic_rooms']['information'].name"/>
                                        </a>
                                    </t>
                                    <t t-if="len(data_count_nav['thematic_rooms']['press_room']) &gt; 0">
                                        <a class="dropdown-item text-uppercase text-dark myriadpro-regular my-dropdown-item-nav"
                                           t-att-href="'/evento/%s/%s/event_area' % (event.id,data_count_nav['thematic_rooms']['press_room'].id)">
                                            <t t-esc="data_count_nav['thematic_rooms']['press_room'].name"/>
                                        </a>
                                    </t>
                                    <t t-if="len(data_count_nav['thematic_rooms']['conference']) &gt; 0">
                                        <a class="dropdown-item text-uppercase text-dark myriadpro-regular my-dropdown-item-nav"
                                           t-att-href="'/evento/%s/%s/event_area' % (event.id,data_count_nav['thematic_rooms']['conference'].id)">
                                            <t t-esc="data_count_nav['thematic_rooms']['conference'].name"/>
                                        </a>
                                    </t>
                                    <t t-if="len(data_count_nav['thematic_rooms']['networking']) &gt; 0">
                                        <a class="dropdown-item text-uppercase text-dark myriadpro-regular my-dropdown-item-nav"
                                           t-att-href="'/evento/%s/%s/event_area' % (event.id,data_count_nav['thematic_rooms']['networking'].id)">
                                            <t t-esc="data_count_nav['thematic_rooms']['networking'].name"/>
                                        </a>
                                    </t>
                                </div>
                            </li>
                        </t>
                        <t t-if="data_count_nav['expositive_rooms'] and len(data_count_nav['expositive_rooms']) &gt; 0">
                            <li class="nav-item menu-link dropdown">
                                <a class="nav-link felti-nav-link dropdown-toggle text-uppercase myriadpro-regular" href="#"
                                   id="navbarDropdownExpos" role="button" data-toggle="dropdown" aria-haspopup="true"
                                   aria-expanded="false">
                                    Expositive rooms
                                </a>
                                <div class="dropdown-menu m-0 border-0 rounded-0"
                                     aria-labelledby="navbarDropdown">
                                    <t t-foreach="data_count_nav['expositive_rooms']" t-as="expositive_room">
                                        <a class="dropdown-item text-uppercase text-dark myriadpro-regular my-dropdown-item-nav"
                                           t-att-href="'/evento/%s/%s/pavilion_event' % (event.id,expositive_room.id)">
                                            <t t-esc="expositive_room.name"/>
                                        </a>
                                    </t>
                                </div>
                            </li>
                        </t>
                        <t t-if="data_count_nav['count_sponsors'] &gt; 0">
                            <li class="nav-item menu-link">
                                <a class="nav-link felti-nav-link text-uppercase myriadpro-regular scrollto-link"
                                   t-att-href="'/evento/%s#patrocinadores-section' % (event.id)"
                                   id="patrocinadores">Sponsors
                                </a>
                            </li>
                        </t>
                        <t t-if="request.env.user.login == 'public'">
                            <li class="nav-item menu-link">
                                <a class="nav-link felti-nav-link text-uppercase myriadpro-regular"
                                   t-att-href="'/evento/%s/exhibitor' % (event.id)">Exhibitors
                                </a>
                            </li>
                        </t>
                        <li class="nav-item menu-link">
                            <a class="nav-link felti-nav-link text-uppercase myriadpro-regular scrollto-link"
                               t-att-href="'/evento/%s/schedule' % (event.id)"
                               id="schedule">Program
                            </a>
                        </li>
                        <!--                        <t t-if="data_count_nav['count_speakers'] &gt; 0">-->
                        <!--                            <li class="nav-item menu-link">-->
                        <!--                                <a class="nav-link felti-nav-link text-uppercase myriadpro-regular scrollto-link"-->
                        <!--                                   t-att-href="'/evento/%s#ponentes-section' % (event.id)"-->
                        <!--                                   id="ponentes">-->
                        <!--                                    Speakers-->
                        <!--                                </a>-->
                        <!--                            </li>-->
                        <!--                        </t>-->
                        <t t-if="data_count_nav['count_news'] &gt; 0">
                            <li class="nav-item menu-link">
                                <a class="nav-link felti-nav-link text-uppercase myriadpro-regular scrollto-link"
                                   t-att-href="'/evento/%s#noticias-section' % (event.id)"
                                   id="noticias">News
                                </a>
                            </li>
                        </t>
                        <t t-if="event.menu_register_schedule == true">
                        </t>
                    </ul>
                    <ul class="navbar-nav">
                        <t t-if="request.env.user.login == 'public'">
                            <t t-call="portal.placeholder_user_sign_in">
                                <t t-set="_item_class" t-value="'nav-item'"/>
                                <t t-set="_link_class" t-value="'nav-link felti-nav-link'"/>
                            </t>
                        </t>
                        <t t-call="portal.user_dropdown">
                            <t t-set="_user_name" t-value="true"/>
                            <t t-set="_item_class" t-value="'nav-item dropdown'"/>
                            <t t-set="_link_class" t-value="'nav-link felti-nav-link'"/>
                            <t t-set="_dropdown_menu_class" t-value="'dropdown-menu-right'"/>
                        </t>
                        <li class="nav-item dropdown">
                            <t t-set="active_lang"
                               t-value="list(filter(lambda lg : lg[0] == lang, languages))[0]"/>
                            <a class="nav-link felti-nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                               role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="myriadpro-regular" t-if="not no_text"
                                      t-esc="active_lang[2].split('/').pop()"/>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right"
                                 aria-labelledby="navbarDropdownMenuLink">
                                <t t-foreach="languages" t-as="lg">
                                    <a t-att-href="url_for(request.httprequest.path + '?' + keep_query(), lang_code=lg[0])"
                                       class="dropdown-item js_change_lang"
                                       t-att-data-url_code="lg[1]">
                                        <span class="myriadpro-regular" t-if="not no_text"
                                              t-esc="lg[2].split('/').pop()"/>
                                    </a>
                                </t>
                            </div>
                        </li>
                        <li class="nav-item dropdown" id="dropDown_search_btn">
                            <a class="nav-link felti-nav-link dropdown-toggle" href="#" id="navbarSearch" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i id="search-icon" class="fa fa-search" style="padding-top: 4px;"/>
                            </a>
                            <div class="dropdown-menu search-panel">
                                <div class="input-group">
                                    <form t-att-action="'/evento/%s/search_event_all' % (event.id)"
                                          id="form_search_event">
                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                        <input type="text" value="" name="search" id="search_navbar"
                                               placeholder="Buscar..." aria-label="Buscar"/>
                                        <div class="input-group-search">
                                            <button type="submit" class="btn" id="search_button_navbar">
                                                <i class="fa fa-search" style="padding-top: 4px;"/>
                                            </button>
                                            <!-- <a class="btn" href="#" id="search_button_navbar">-->
                                            <!-- <i class="fa fa-search" style="padding-top: 4px;"/>-->
                                            <!-- </a>-->
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>

        </template>

        <record id="felti_nav" model="ir.ui.view">
            <field name="name">Felti Nav</field>
            <field name="type">qweb</field>
            <field name="model">ir.ui.view</field>
            <field name="virtual_fair">True</field>
            <field name="arch" type="xml">
                <t t-call="df_website_front.felti_nav_data"/>
            </field>
        </record>

        <template id="felti_banner" name="Felti Banner">
            <div class="evento-banner">
                <div id="carouselIndex" class="carousel slide" data-ride="carousel">
                    <div id="div-banner-felti">
                        <t t-if="event.banner_event">
                            <img t-att-src="image_data_uri(event.banner_event)" style="width:100%"
                                 id="background-felti" class="evento-banner imagen-alto"/>
                            <img id="image-banner-background-responsive"
                                 src="/df_website_front/static/src/img/fondo-parallax.jpg"/>
                        </t>
                        <img src="/df_website_front/static/src/img/felti-logo.png" class="felti-logo-position"/>
                        <div class="felti-titulo-banner">
                            <h2 class="text-uppercase titulo-main-felti-bottom myriadpro-semibold-condensed">
                                <t t-esc="event.edition_id.name"/>
                            </h2>
                            <h5 class="titulo-debajo-felti-fecha text-uppercase myriadpro-semibold-semicondensed"
                                style="width:100%">
                                <span id="fecha_felti">
                                    FROM
                                    <t t-esc="date_range_str['date_st']"
                                       t-options="{'widget': 'date', 'format': 'dd'}"/>
                                    TO
                                    <t t-esc="date_range_str['date_end']"
                                       t-options="{'widget': 'date', 'format': 'dd'}"/>
                                    <t t-esc="date_range_str['date_end']"
                                       t-options="{'widget': 'date', 'format': 'MMMM'}"/>
                                </span>
                            </h5>
                            <div class="slogan-div">
                                <h2 class="text-uppercase slogan-main-felti text-white myriadpro-semibold-condensed">
                                    <t t-raw="event.slogan"/>
                                </h2>
                                <img class="nosune_svg" src="/df_website_front/static/src/img/slogan_sin_texto.png"
                                     alt="..."/>
                            </div>
                        </div>
                        <div class="buttons-banner animate__animated animate__backInLeft">
                            <t t-if="event.menu_register_cta">
                                <a t-att-href="'/evento/%s/user_pre_sign_in' % (event.id)"
                                   class="btn btn-banner registrate-ahora-felti text-uppercase myriadpro-regular">
                                    Register now
                                </a>
                            </t>
                            <t t-if="event.website_track_proposal">
                                <a t-att-href="'/evento/%s/track_proposal' % (event.id)"
                                   class="btn btn-banner solicitud-charla-felti text-uppercase myriadpro-regular color-white">
                                    Present your company
                                </a>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
        </template>

        <template id="felti_intro" name="Felti Introduccion">
            <div class="margin-top-seccion text-center pt-5 container-background" id="convocatoria-section">
                <div class="animation-felti-right">
                    <div class="container mt-5">
                        <div class="introduccion">
                            <t t-raw="event.title"/>
                            <hr class="encabezado-underline"/>
                        </div>
                        <div class="texto mt-5 container">
                            <t t-raw="event.description"/>
                        </div>
                        <a href="#"
                           class="btn btn-convocatoria text-uppercase rounded-pill feria-see-all mt-5 myriadpro-regular texto">
                            Official announcement
                        </a>
                    </div>
                </div>
            </div>
        </template>

        <template id="felti_contador" name="Felti Contador">
            <div class="contador p-top-contador color-white parallax-felti-contador">

                <h2 class="text-center myriadpro-semibold-condensed text-uppercase letter-spacing-2
                            position-relative pt-3" style="margin: 0 5px">
                    <t t-raw="event.count_title"/>
                </h2>
                <i>
                    <h5 class="text-center position-relative pt-1" style="margin: 0 5px">
                        <t t-raw="event.count_subtitle"/>
                    </h5>
                </i>
                <div class="noticias-row">
                    <div class="container mb-2">
                        <div class="row justify-content-between mt-5 text-center">
                            <div class="col-3 counters myriadpro-semibold-condensed">
                                <p class="h-numbers">
                                    <t t-esc="counts['count_exhibitor']"/>
                                </p>
                                <p class="fs-small text-uppercase myriadpro-regular letter-spacing-2">
                                    EXHIBITORS
                                </p>
                            </div>

                            <div class="col-3 counters myriadpro-semibold-condensed">
                                <p class="h-numbers">
                                    <t t-esc="counts['count_conferences']"/>
                                </p>
                                <p class="fs-small text-uppercase myriadpro-regular letter-spacing-2">Presentations</p>
                            </div>

                            <div class="col-3 counters myriadpro-semibold-condensed">
                                <p class="h-numbers">
                                    <t t-esc="counts['count_visitors']"/>
                                </p>
                                <p class="fs-small text-uppercase myriadpro-regular letter-spacing-2">Visitors</p>
                            </div>

                            <div class="col-3 counters myriadpro-semibold-condensed">
                                <p class="h-numbers">
                                    <t t-esc="counts['count_countrys']"/>
                                </p>
                                <p class="fs-small text-uppercase myriadpro-regular letter-spacing-2">Countries</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="parallax-felti-contador">

                </div>
            </div>

        </template>

        <template id="felti_patrocinadores" name="Felti Patrocinadores">
            <t t-if="len(sponsors['sponsors']) &gt; 0">
                <div class="patrocinadores mt-5 pt-5" id="patrocinadores-section">
                    <div class="animation-felti-right">
                        <h2 class="text-center text-uppercase encabezados myriadpro-semibold-condensed position-relative pt-3">
                            SPONSORS
                        </h2>
                        <hr class="hr-patrocinadores"/>
                        <div class="patrocinadores-felti">
                            <div id="contenedor-slider" class="contenedor-slider">
                                <div id="slider" class="slider">
                                    <t t-foreach="sponsors['sponsors']" t-as="sponsor">
                                        <section class="slider__section grid">
                                            <a t-attf-href="#{sponsor.url if sponsor.url else '#'}" target="_blank">
                                                <t t-if="sponsor.image_512">
                                                    <img t-att-src="image_data_uri(sponsor.image_512)"
                                                         t-att-alt="sponsor.name"
                                                         class="slider__img"/>
                                                </t>
                                            </a>
                                        </section>
                                    </t>
                                </div>
                                <t t-if="len(sponsors) &gt; 4">
                                    <div id="btn-prev" class="btn-prev">&#60;</div>
                                    <div id="btn-next" class="btn-next">&#62;</div>
                                </t>
                            </div>
                            <a t-att-href="'/evento/%s/sponsor_event' % (event.id)"
                               class="btn text-uppercase rounded-pill feria-see-all myriadpro-regular texto mt-3">
                                see all
                            </a>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="felti_ponentes" name="Felti Ponentes">
            <t t-if="len(speakers) &gt; 0">
                <div class="mt-5 pt-5 container-background" id="ponentes-section">
                    <div class="animation-felti-left">
                        <h2 class="text-center text-uppercase encabezados myriadpro-semibold-condensed position-relative pt-3">
                            Speakers
                        </h2>
                        <hr class="encabezado-underline"/>

                        <div class="container mt-5" style="text-align: center">
                            <div class="row text-center" id="ponente-block">
                                <t t-foreach="speakers" t-as="speaker">
                                    <div class="col-sm-3 ponente-grid" t-att-data-id="speaker.id">
                                        <div class="ponente-container cursor-pointer-all">
                                            <div class="image-inside"/>
                                            <t t-if="speaker.partner_id.image_1920">
                                                <img t-att-src="image_data_uri(speaker.partner_id.image_1920)"
                                                     t-att-alt="speaker.partner_id.name"
                                                     class="ponente-image"/>
                                            </t>
                                        </div>
                                        <p class="text-uppercase ponente-name">
                                            <t t-esc="speaker.partner_id.name"/>
                                        </p>
                                        <p class="ponente-cargo">
                                            <t t-esc="speaker.partner_id.function"/>
                                        </p>
                                        <p class="ponente-company">
                                            <t t-if="speaker.partner_id.parent_id">
                                                <t t-esc="speaker.partner_id.parent_id.name"/>
                                            </t>
                                        </p>
                                    </div>
                                </t>

                            </div>
                            <a t-att-href="'/evento/%s/speaker_event' % (event.id)"
                               class="btn text-uppercase rounded-pill feria-see-all myriadpro-regular texto ponentes-see-all">
                                see all
                            </a>
                        </div>
                    </div>
                </div>
            </t>

        </template>

        <template id="felti_noticias" name="Felti Noticias">
            <t t-if="len(news) &gt; 0">
                <div class="noticias-importantes mt-5 pt-5" id="noticias-section">
                    <div>
                        <h2 class="text-center text-uppercase encabezados myriadpro-semibold-condensed position-relative pt-3">
                            News
                        </h2>
                        <hr class="encabezado-underline"/>
                        <div class="noticias-felti">
                            <div class="container mb-2">
                                <div class="row justify-content-between mt-5">
                                    <t t-foreach="news" t-as="new_a">
                                        <div class="col-sm-3 noticias-grid">
                                            <a t-att-href="'/evento/%s/%s/new_detail' % (event.id,new_a.id)"
                                               class="new-title" style="color: black !important">
                                                <div class="noticias-box">
                                                    <div class="img-new-home">

                                                        <div class="position-relative">
                                                            <t t-if="new_a.image">
                                                                <img t-att-src="image_data_uri(new_a.image)"
                                                                     t-att-alt="new_a.name"
                                                                     class="noticias-img" alt="..."/>
                                                            </t>
                                                            <div class=" myriadpro-semibold-condensed author-news text-white px-2 pt-3 pb-1 mb-0">
                                                                <t t-if="new_a.taken_from">
                                                                    <t t-esc="new_a.taken_from"/>
                                                                </t>
                                                                <t t-else="">
                                                                    <t t-if="new_a.author_id">
                                                                        <t t-esc="new_a.author_id.name"/>
                                                                    </t>
                                                                </t>
                                                            </div>
                                                        </div>

                                                    </div>
                                                    <div class="noticia-body pt-2 text-black">
                                                        <h5 class="font-weight-bold">
                                                            <t t-esc="new_a.name"/>
                                                        </h5>
                                                        <p class="myriadpro-regular noticia-author"
                                                           style="font-size: 16px;">
                                                            <t t-if="new_a.resume">
                                                                <span class="text-new-summary">
                                                                    <t t-esc="new_a.resume"/>
                                                                </span>
                                                            </t>
                                                        </p>
                                                        <p class="myriadpro-regular noticia-author"
                                                           style="font-size: 12px;">
